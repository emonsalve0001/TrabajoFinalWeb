@model IEnumerable<TrabajoFinalWeb.Models.DetalleBoleta>

<body class="subpage">

    <h2>Pedido</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModoDePago.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Detalle)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModoDePago.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.Detalle)
                </td>
            </tr>
        }
    </table>
    <div class="form-actions no-color">
        @Html.ActionLink("Imprimir", "") | 
        @Html.ActionLink("Regresar", "../Productos_Pedidos/Orden")
    </div>
</body>